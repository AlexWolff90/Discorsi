<% if logged_in? %>
	<div class="row">
		<div class="col-md-6">
			<h3>Points</h3>
		</div>
		<div class="col-md-6">
			<h3>Counters</h3>
		</div>
	</div>
	<%= render 'shared/feed' %>
<% else %>
	<div class="center jumbotron">
		<h1>Welcome to Discorsi!</h1>
		<h2>
			A community for exporing ideas, views, and opinions.
		</h2>

		<%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
	</div>

	<%= link_to image_tag("rails.png", alt: "Rails logo"), 'http://rubyonrails.org' %>
<% end %>
