<div class="row">
	<% if @counterpoint_to.nil? %>
		<div class="col-md-6">
			<h3>Make a Point</h3>
			<%= render 'shared/point_form' %>
		</div>
	<% else %>
		<div class="col-md-6">
			<h3>Point</h3>
			<ol class="points">
				<%= render @counterpoint_to %>
			</ol>
		</div>
		<div class="col-md-6">
			<h3>Counter the Point</h3>
			<%= render 'shared/point_form', counterpoint_to_id: @counterpoint_to.id %>
		</div>
	<% end %>
</div>
