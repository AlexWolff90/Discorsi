<% provide(:title, "#{@user.first_name} #{@user.last_name}") %>
<div class="row">
	<aside class="col-md-4">
		<section class="user_info">
			<h1>
				<%= gravatar_for @user %>
				<%= "#{@user.first_name} #{@user.last_name}" %>
			</h1>
		</section>
		<section class="stats">
			<%= render 'shared/stats' %>
		</section>
		<div class="row">
			<div class="col-md-6">
				<%= render 'follow_form' if logged_in? %>
			</div>
		</div>
	</aside>
	<div class="col-md-8">
		<% if @user.points.any? %>
			<h3>Points (<%= @user.points.count %>)</h3>
			<ol class="points">
				<%= render @points %>
			</ol>
			<%= will_paginate @points %>
		<% end %>
	</div>
</div>
